
<div class='container'>
  <div class='border item-show-info row'>

<div class = "item_image floatl col-md-8"><%= image_tag @item.pictures.first.image.url, id: 'show-image' %></div>

<div class='underpass-pic'>
<% @item.pictures.each do |pic| %>
  <div class = "thumbnail-pic"><%= image_tag pic.image.url, class: 'thumbnail-pic' %></div>
  <%= link_to 'delete', item_picture_url(@item.id,pic.id),method: :delete, id: 'delImgId' %>
<% end %>
</div>

<div class="pull-right col-md-4 item-description">
    <h1><%= @item.name %></h1>
    <strong>Owner:</strong>       <%= @owner.first_name.capitalize %> <%= @owner.last_name.capitalize %><br>
    <strong>Type:</strong>&nbsp;&nbsp;&nbsp;  <%= @item.item_type.capitalize %><br>
    <dl>
  <dt><strong>Description:</strong></dt>
  <dd><%= @item.description %></dd>
  </dl>
<br>

<!-- <div class = "borrow-button"><%= button_tag 'Borrow', type: 'button' %></div> -->
<!-- button_tag 'Borrow', type: 'reset', disabled: true -->
  <%= link_to 'Borrrow', new_item_checkout_path(@item), class: 'btn btn-success btn-lg' %>
  <% if current_user == @item.user_id %>
  <%= link_to 'Edit', edit_item_path %>
  <%= link_to 'Delete', item_path, method: :delete, data: {confirm: "Are you sure you want to delete the item '#{@item.name}'? This cannot be undone!"} %>
  <% end %>
</div>
</div>
</div>

<div class='border container story-box'>
  <div class='container'>
  <h3>Adventures of:</h3>
  <div class='row'>
    <% if @stories.empty? %>
    <em>Currently this lone item has no adventures </em>
    <% else %>
    <% @stories.each do |story| %>
    <div class="col-xs-6 col-md-11">
      <h2><%= story.title %></h2>
      <div class='border'>
        <p><%=story.story%></p>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
</div>
