<div class='border container story-box'>
  <div class='container'>
  <h3>Adventures of:</h3>
  <div class='row'>
    <% if @stories.empty? %>
    <em>Currently this lone item has no adventures </em>
    <% else %>
    <% @stories.each do |story| %>
    <div class="col-xs-6 col-md-11">
      <h2><%= story.title %></h2>
      <div class='border'>
        <p><%=story.story%></p>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
</div>



<%= form_for(@mail) do |f| %>

  <% if @mail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mail.errors.count, "error") %> prohibited this mail from being saved:</h2>

      <ul>
        <% @mail.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.label :title %><br />
  <%= f.text_field :title, id: 'mailTitle' %><br />

  <%= f.label :text %><br />
  <%= f.text_area :text, id: 'mailText' %><br />


  <button type="button" id="mailSubmitBtn" data-ownerId="<%= @item.user_id%>">Send Email</button>



<% end %>
