<h2>Search Results</h2>
<% if searchItemList.empty?  %>
<em>  No results found </em>
<% else %>
<% searchItemList.each do |item| %>
      <div class='col-md-4 item-box col-xs-6'>
      <div class = "item_image thumbnail">
        <% if item.pictures.empty? %>
        <%= image_tag "http://epaper2.mid-day.com/images/no_image_thumb.gif", class:' main-image'%>
        <% else %>
        <%= image_tag item.pictures.first.image.url(:medium), class: 'main-image' %>
        <% end %>
        <%= link_to item.name, item_path(item) %>
        <br>Owner: <%= User.find(item.user_id).first_name %> <%= User.find(item.user_id).last_name %>
      </div>
    </div>
    <% end %>
<% end %>
