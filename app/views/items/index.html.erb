 <div class='container search-container'>

  <div class='row'>

    <div class='col-md-2 category-list'>

      <nav class=" navbar-default navbar-static-top" style="background-color:white" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li><a href='' id='allCat' class="link-gap">All Items</a></li>
              <li><a href='' id='educationCat' class="link-gap">Education</a></li>
              <li><a href='' id='equipmentCat' class="link-gap">Equipment</a></li>
              <li><a href='' id='landscapeCat' class="link-gap">Landscape</a></li>
              <li><a href='' id='leisureCat' class="link-gap">Leisure</a></li>
              <li><a href='' id='outdoorCat' class="link-gap">Outdoor</a></li>
              <li><a href='' id='repairsCat' class="link-gap">Repairs</a></li>
              <!-- <li id="search-on-category"><input id="searchTextField" type="text" name="searchTxt"></li>
              <li><button id="searchBtn">Search</button></li> -->
              <li> <strong>Search by Distance: </strong> </li>
              <li>
                <select  class='inline' id='distance-select' name="select">
                <option value="All" selected>All</option>
                <option value="10">10 km</option>
                <option value="20" >20 km</option>
                <option value="50">50 km</option>
                </select>
                <button class="inline" id="searchGeoBtn">Go</button>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    </div>

    <div class='col-md-10 search-results'>
      <div id="searchSec">
        <div id="searchList">
          <section id="allItems">
            <% @items.each do |item| %>

              <% if item.pictures.empty? %>
                <div class='col-md-4 item-box col-xs-6'>
                  <div class = "item_search_box">
                  <!-- <div class="item_image item-box thumbnail"> -->
                    <div class = "index-image-wrapper">
                      <!-- <%#= link_to image_tag("http://epaper2.mid-day.com/images/no_image_thumb.gif", class:' main-image'), item_path(item) %> -->
                      <%= link_to image_tag("http://epaper2.mid-day.com/images/no_image_thumb.gif"), item_path(item) %>
                    </div>
                    <p class='item-word'>
                      <%= link_to item.name, item_path(item) %>
                      <br>Owner: <%= User.find(item.user_id).first_name %> <%= User.find(item.user_id).last_name %>
                    </p>
                  </div>
                  <!-- </div> -->
                </div>
              <% elsif item.pictures != nil %>
                  <div class='col-md-4 item-box col-xs-6'>
                    <div class = "item_search_box">
                    <!-- <div class="item_image item-box thumbnail"> -->
                      <div class = "index-image-wrapper">
                        <!-- <%#= link_to image_tag(item.pictures.first.image.url(:medium), class: 'main-image'),item_path(item) %> -->
                        <%= link_to image_tag(item.pictures.first.image.url(:medium)),item_path(item) %>
                      </div>
                      <p class='item-word'>
                        <%= link_to item.name, item_path(item) %>
                        <br>Owner: <%= User.find(item.user_id).first_name %> <%= User.find(item.user_id).last_name %>
                      </p>
                    </div>
                    <!-- </div> -->
                  </div>
              <% end %>

            <% end %>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>
