<h1>Create Item</h1>
<%= form_for @item do |f| %>
  <% if @item.errors.any? %>
    <%= pluralize(@item.errors.count,"error") %> prevented you from saving:

    <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <%end %>


  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :item_type %>
  <%= f.text_field :item_type %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.submit %>
<% end %>
