<div class='container'>
<div class="page-header">
  <h1><%=current_user.first_name.capitalize%> <%=current_user.last_name.capitalize%>'s <small>Inbox</small></h1>
</div>

<div class='container'>
<div class="row">
  <div class="col-md-2"><h4>Messages</h4>
    <a href="#">Inbox <span class="badge"><%=@mails.count%></span></a>
</div>
  <div class="col-md-8">
    <h4>Mail </h4>
    <div class='fluid-container mailbox'>
    <table class="table table-striped">
      <tr>
        <th>Status</th>
        <th>Date</th>
        <th>Sender</th>
        <th>Title</th>
      </tr>
    <% @mails.each do |mail| %>
    <tr>
      <td><%= link_to 'Delete',  mail_path(mail.id),  method: :delete %></td>
      <td><%=mail.created_at.strftime("%m/%d/%Y")%></td>
      <td><%=User.find(mail.sender).first_name%> <%=User.find(mail.sender).last_name%></td>
      <td><%=link_to "#{mail.title}", mail_path(mail.id)%></td>
      </tr>
    <% end %>
  </table>
  </br>
  </div>
  </div>
</div>
</div>
</div>
