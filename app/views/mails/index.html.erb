<div class='container'>
<div class="page-header">
  <h1><%=current_user.first_name.capitalize%> <%=current_user.last_name.capitalize%>'s <small>Inbox</small></h1>
</div>

<div class='container'>
<div class="row">
  <div class="col-md-4"><a href="#">Inbox <span class="badge"><%=@mails.count%></span></a>
</div>
  <div class="col-md-8">
    <table class="table table-striped">

    </table>
    <% @mails.each do |mail| %>
        <%=mail.title%>
        <%=mail.text%>
      </br>
    <% end %>
  </div>
</div>
</div>
</div>
